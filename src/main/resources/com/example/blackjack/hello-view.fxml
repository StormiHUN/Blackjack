<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="60.0" style="-fx-background-color: gray;" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.blackjack.HelloController">
   <children>
      <Arc fx:id="table" centerX="150.0" centerY="150.0" fill="#109424" length="180.0" radiusX="300.0" radiusY="300.0" startAngle="180.0" stroke="BLACK" strokeType="INSIDE" type="ROUND" />
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: lightgray;">
         <children>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label fx:id="bank" alignment="CENTER" prefWidth="96.0" text="500">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <Label>
                     <graphic>
                        <ImageView fitHeight="96.0" fitWidth="96.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/chips.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <Label onMousePressed="#stake5">
                     <graphic>
                        <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/chip5.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
                  <Label onMousePressed="#stake25">
                     <graphic>
                        <ImageView fitHeight="64.0" fitWidth="64.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/chip25.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <Label>
                     <graphic>
                        <ImageView fitHeight="64.0" fitWidth="64.0" onMousePressed="#stake50" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/chip50.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
                  <Label>
                     <graphic>
                        <ImageView fitHeight="64.0" fitWidth="64.0" onMousePressed="#stake100" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@icons/chip100.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
               </children>
            </VBox>
            <VBox spacing="10.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="hitButton" mnemonicParsing="false" onAction="#onHitClick" prefWidth="50.0" text="Hit" />
                  <Button fx:id="standButton" mnemonicParsing="false" onAction="#onStandClick" prefWidth="50.0" text="Stand" />
                  <Button fx:id="allInButton" mnemonicParsing="false" onAction="#onAllInClick" prefWidth="50.0" style="-fx-background-color: red;" text="All in" textFill="WHITE" />
                  <Button fx:id="leaveButton" mnemonicParsing="false" onAction="#onLeaveClick" prefWidth="50.0" text="Leave" />
               </children>
               <HBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </VBox>
            <VBox>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <children>
                  <RadioButton fx:id="isClient" mnemonicParsing="false" selected="true" text="Client">
                     <toggleGroup>
                        <ToggleGroup fx:id="modes" />
                     </toggleGroup>
                     <VBox.margin>
                        <Insets bottom="4.0" />
                     </VBox.margin>
                  </RadioButton>
                  <TextField fx:id="serverIp" promptText="server ip (port: 678)" text="10.201.2.13">
                     <VBox.margin>
                        <Insets bottom="20.0" />
                     </VBox.margin>
                  </TextField>
                  <RadioButton fx:id="isServer" mnemonicParsing="false" text="Server" toggleGroup="$modes" />
                  <Label alignment="BOTTOM_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Zsidorián és András Bt. ©" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
   </padding>
</VBox>
